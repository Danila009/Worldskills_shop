<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addingAdsA"
    android:background="@color/Gray">

    <EditText
        android:id="@+id/titleADS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Название"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Телефон"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PriceADS" />

    <EditText
        android:id="@+id/PriceADS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Цена"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleADS" />

    <EditText
        android:id="@+id/Description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Описание"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/butAdd_image_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Phone" />

    <ImageButton
        android:id="@+id/butAdd_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="95dp"
        android:backgroundTint="@color/Gray"
        android:src="@drawable/addplus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/butAdd_image_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/Gray"
        android:src="@drawable/addplus"
        app:layout_constraintBottom_toBottomOf="@+id/butAdd_image"
        app:layout_constraintStart_toEndOf="@+id/butAdd_image"
        app:layout_constraintTop_toTopOf="@+id/butAdd_image" />

    <ImageButton
        android:id="@+id/butAdd_image_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/Gray"
        android:src="@drawable/addplus"
        app:layout_constraintBottom_toBottomOf="@+id/butAdd_image_2"
        app:layout_constraintEnd_toStartOf="@+id/butAdd_image_4"
        app:layout_constraintTop_toTopOf="@+id/butAdd_image_2" />

    <ImageButton
        android:id="@+id/butAdd_image_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/Gray"
        android:src="@drawable/addplus"
        app:layout_constraintBottom_toBottomOf="@+id/butAdd_image_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/butAdd_image_3"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#298507"
        android:text="Продолжить"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butAdd_image_4"
        app:layout_constraintVertical_bias="0.512" />

</androidx.constraintlayout.widget.ConstraintLayout>