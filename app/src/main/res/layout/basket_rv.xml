<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/productPhotoBasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/priceBasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="300 руб."
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/productPhotoBasket"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/titleAnnouncementBasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/priceBasket"
            app:layout_constraintTop_toTopOf="@+id/productPhotoBasket" />

        <TextView
            android:id="@+id/description"
            android:layout_width="238dp"
            android:layout_height="66dp"
            android:text="Описание"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/priceBasket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/productPhotoBasket"
            app:layout_constraintTop_toBottomOf="@+id/titleAnnouncementBasket" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/priceBasket"
            app:layout_constraintEnd_toStartOf="@+id/priceBasket"
            app:layout_constraintTop_toTopOf="@+id/priceBasket" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>